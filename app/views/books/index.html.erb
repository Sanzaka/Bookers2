<% if @book.errors.any? %>
  <strong><%= @book.errors.count %>error prohibited this obj from being saved:</strong>
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <%end%>
<%end%>
<div class="container">
  <div class="row">
    <%= render "books/list", new_book:@new_book %>
    <div class="col-md-8 offset-md-1">
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= attachment_image_tag(book.user, :profile_image,format:"jpg", fallback:"no_image.jpg", size:"100x100")%></td>
              <td>
                <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                <%end%>
              </td>
              <td><%= book.body %></td>
            </tr>
          <%end%>
        </tbody>
      </table>
    </div>
  </div>
</div>