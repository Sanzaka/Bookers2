<h1>Book detail</h1>
<div class="container">
  <div class="row">
    <%= render "books/list", new_book:@new_book, side_user:@side_user %>
    <div class="col-md-8 offset-md-1">
      <table class="table">
          <tr>
            <td>
              <%= link_to user_path(@book.user.id) do %>
                <%= attachment_image_tag(@book.user, :profile_image,format:"jpg", fallback:"no_image.jpg", size:"60x60")%>
                <%= @book.user.name %>
              <%end%>  
            </td>
            <td>
              <%= @book.title %>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <% if @book.user.id == current_user.id %>
            <td>
              <%= link_to "Edit", edit_book_path(@book.id) %>
            </td>
            <td>
              <%= link_to "Destroy", book_path(@book.id), method: :delete, data: {confirm: "本当に削除しますか？"} %>
            </td>
            <% end %>
          <tr>
            <td>
            コメント数：<%= @book.book_comments.count %>
            </td>
            <td class="favorites_buttons_<%=@book.id%>">
            <%= render partial: "favorites/favorite", locals: {book: @book} %>
          </td>
          </tr>
          <tr class="comments_area">
            <%= render "comments/comment", book: @book %>
          </tr>
          <tr>
          <td class="comment_form">
            <%= render "comments/form", book: @book, comment: @comment %>
          </td>
          </tr>
      </table>
    </div>
  </div>
</div>