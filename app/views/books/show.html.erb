<h1>books-show</h1>
<div class="container">
  <div class="row">
    <%= render "books/list", new_book:@new_book %>
    <div class="col-md-8 offset-md-1">
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user.id) do %>
                <%= attachment_image_tag(@book.user, :profile_image,format:"jpg", fallback:"no_image.jpg", size:"60x60")%>
                <%= @book.user.name %>
              <%end%>  
            </td>
            <td>
              <%= @book.title %>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <td>
              <%= link_to edit_book_path(@book.id) do %>
                <div class="btn btn-success">Edit</div>
              <%end%>
            </td>
            <td>
              <%= link_to book_path(@book.id), method: :delete, data: {confirm: "本当に削除しますか？"} do %>
                <div class="btn btn-danger">destroy</div>
              <%end%>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
