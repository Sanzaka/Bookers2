<h1>Book detail</h1>
<div class="container">
  <div class="row">
    <%= render "books/list", new_book:@new_book, side_user:@side_user %>
    <div class="col-md-8 offset-md-1">
      <table class="table">
          <tr>
            <td>
              <%= link_to user_path(@book.user.id) do %>
                <%= attachment_image_tag(@book.user, :profile_image,format:"jpg", fallback:"no_image.jpg", size:"60x60")%>
                <%= @book.user.name %>
              <%end%>  
            </td>
            <td>
              <%= @book.title %>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <% if @book.user.id == current_user.id %>
            <td>
              <%= link_to "Edit", edit_book_path(@book.id) %>
            </td>
            <td>
              <%= link_to "Destroy", book_path(@book.id), method: :delete, data: {confirm: "本当に削除しますか？"} %>
            </td>
            <% end %>
          <tr>
            <td colspan="4">
            コメント数：<%= @book.book_comments.count %>
            </td>
          </tr>
          </tr>
          <% @book.book_comments.each do |c|%>
          <tr>
            <td colspan="1">
              コメント
            </td>
            <td>
              <%= link_to user_path(c.user.id) do %>
                <%= attachment_image_tag(c.user, :profile_image,format:"jpg", fallback:"no_image.jpg", size:"60x60")%>
                <%= c.user.name %>
              <%end%>
            </td>
            <td>
              <%= c.comment %>
            </td>
            <td>
            <% if c.user == current_user %>
              <%= link_to "destroy", book_book_comments_path(c.book_id), method: :delete %>
            <%end%>
            </td>
          </tr>
          <%end%>
          <tr>
          <td>
          <%if @book.favorited_by?(current_user) %>
            <p>
              <%= link_to book_favorites_path(@book.id), method: :delete do %>
                ❤<%= @book.favorites.count %>いいね
              <%end%>
            </p>
            <%else%>
            <p>
              <%= link_to book_favorites_path(@book.id), method: :post do %>
                ♡<%= @book.favorites.count %>いいね
              <%end%>
            </p>
          <%end%>
          </td>
          <td>
            <%= form_with(model:[@book,@comment], local:true) do |f| %>
              <%= f.text_area :comment, rows:"3", placeholder: "コメントをここに" %>
              <%= f.submit "コメントを送信" %>
            <%end%>
          </td>
          </tr>
      </table>
    </div>
  </div>
</div>