<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="/">Bookers</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse text-left" id="navbarNav">
        <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li class="nav-item active p-2">
              <i class="fas fa-home"></i><%= link_to " Home", user_path(current_user.id) %>
            </li>
            <li class="nav-item p-2">
              <i class="fas fa-users text-light"></i><%= link_to " Users", users_path %>
            </li>
            <li class="nav-item p-2">
              <i class="fas fa-book-open text-light"></i><%= link_to " Books", books_path%>
            </li>
            <li class="nav-item p-2">
              <i class="fas fa-sign-out-alt text-light"></i><%= link_to " logout", destroy_user_session_path, method: :delete%>
            </li>
          <%else%>
            <li class="nav-item active p-2">
              <i class="fas fa-home text-light"></i><%= link_to " Home", url:"/"%>
            </li>
            <li class="nav-item p-2">
              <i class="fas fa-link text-light"></i><%= link_to " About", home_about_path %>
            </li>
            <li class="nav-item p-2">
              <i class="fas fa-user-plus text-light"></i><%= link_to " sign up", new_user_registration_path %>
            </li>
            <li class="nav-item p-2">
              <i class="fas fa-sign-in-alt text-light"></i><%= link_to " login", new_user_session_path %>
            </li>
          <%end%>
        </ul>
      </div>
    </nav>
    <p id="notice"></p>
    <%= yield %>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">CopyRight infratop.inc</div>
        </div>
      </div>
    </footer>
  </body>
</html>
