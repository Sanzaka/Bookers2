<div class="container">
  <div class="row">
    <%= render "books/list", new_book:@new_book , side_user:@side_user%>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user.id) do %>
                  <%= attachment_image_tag(@user, :profile_image,format:"jpg", fallback:"no_image.jpg", size:"60x60")%></td>
                <%end%>
              <td>
                <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                <%end%>
              </td>
              <td><%= book.body %></td>
              <td class="favorites_buttons_<%=book.id%>">
                <%= render partial: "favorites/favorite", locals: {book: book} %>
              </td>
              <td>
                <%= book.book_comments.count %>コメント
              </td>
            </tr>
          <%end%>
        </tbody>
      </table>

      <!--投稿数をデータとして表示-->
      <h4>投稿数データ</h4>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">本日の投稿数</th>
            <th scope="col">前日の投稿数</th>
            <th scope="col">前日比</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @today.count %></td>
            <td><%= @yesterday.count %></td>
            <td><%= @compare_day %></td>
          </tr>
        </tbody>
      </table>
      
      <table class="table">
        <thead>
          <tr>
            <th scope="col">今週の投稿数</th>
            <th scope="col">前週の投稿数</th>
            <th scope="col">前週比</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @this_week.count %></td>
            <td><%= @last_week.count %></td>
            <td><%= @compare_week %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>