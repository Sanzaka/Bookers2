<h1>users-edit</h1>
<div class="container">
  <div class="row">
    <div class="col-8 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model:@user, local:true do |f| %> 
        <form>
          <div class="form-group">
            <label>Name</label><br>
            <%= f.text_field :name, class:"form-control" %>
          </div>
          <div class="form-group">
            <label>Image</label><br>
            <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
          </div>
          <div class="form-group">
            <label>Introduction</label><br>
            <%= f.text_area :introduction, class:"form-control" %><br>
            <%= f.submit "Update Book",class:"btn btn-success"%>
          </div>
        </form>
      <%end%>
    </div>
  </div>
</div>