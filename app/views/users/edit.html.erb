<h1>users-edit</h1>
<div class="container">
  <div class="row">
    <div class="col-8 mx-auto">
      <h1>Editing Book</h1>
      <% if @user.errors.any? %>
        <strong><%= @user.errors.count %>error prohibited this obj from being saved:</strong><br>
        <% @user.errors.full_messages.each do |message| %>
          <%= message %>
        <%end%>
      <%end%>
      <%= form_with model:@user, local:true do |f| %> 
          <div class="form-group">
            <label>Name</label><br>
            <%= f.text_field :name, class:"form-control" %>
          </div>
          <div class="form-group">
            <label>Image</label><br>
            <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
          </div>
          <div class="form-group">
            <label>Introduction</label><br>
            <%= f.text_area :introduction, class:"form-control" %><br>
            <%= f.submit "Update User",class:"btn btn-success"%>
          </div>
      <%end%>
    </div>
  </div>
</div>